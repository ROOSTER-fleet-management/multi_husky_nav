<launch>
  <arg name="namespace"       default="hsk00" />
  <arg name="tfpre"           default="$(arg namespace)_tf"/>
  <arg name="odom_frame_id"   default="$(arg tfpre)/odom"/>
  <arg name="base_frame_id"   default="$(arg tfpre)/base_link"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="odom_topic" default="odometry/filtered" />
  <arg name="laser_topic" default="scan" />

  <arg name="no_static_map" default="false"/>

  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>
  <!-- <arg name="base_local_planner" default="base_local_planner/TrajectoryPlannerROS"/> -->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>  
    <rosparam file="$(find multi_husky_nav)/config/planner.yaml" command="load"/>

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam file="$(find multi_husky_nav)/config/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam param="global_costmap/robot_base_frame" subst_value="True">$(arg base_frame_id)</rosparam>
    <rosparam file="$(find multi_husky_nav)/config/costmap_common.yaml" command="load" ns="local_costmap" />
    <rosparam param="local_costmap/robot_base_frame" subst_value="True">$(arg base_frame_id)</rosparam>

    <!-- local costmap, needs size -->
    <rosparam file="$(find multi_husky_nav)/config/costmap_local.yaml" command="load" ns="local_costmap" />
    <rosparam param="local_costmap/global_frame" subst_value="True">$(arg odom_frame_id)</rosparam>
    <param name="local_costmap/width" value="10.0"/>
    <param name="local_costmap/height" value="10.0"/>

    <!-- static global costmap, static map provides size -->
    <rosparam file="$(find multi_husky_nav)/config/costmap_global_static.yaml" command="load" ns="global_costmap" unless="$(arg no_static_map)"/>
    
    <!-- global costmap with laser, for odom_navigation_demo -->
    <rosparam file="$(find multi_husky_nav)/config/costmap_global_laser.yaml" command="load" ns="global_costmap" if="$(arg no_static_map)"/>
    <rosparam param="global_costmap/global_frame" subst_value="True" if="$(arg no_static_map)">$(arg odom_frame_id)</rosparam>
    <param name="global_costmap/width" value="100.0" if="$(arg no_static_map)"/>
    <param name="global_costmap/height" value="100.0" if="$(arg no_static_map)"/>
  </node>

</launch>